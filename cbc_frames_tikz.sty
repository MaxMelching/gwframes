%       % -- Only one value given, set it to "value" subkey
%       \pgfkeyssetvalue{#1/#2/value}{##1}%
%     \fi
%   }}
% }
\newcommand*\pgfkeysdefvalueorkeys[1]{%
  \pgfkeys{#1/.code={%
    \pgfutil@in@={##1}%
    \ifpgfutil@in@%
      % -- Multiple key-value pairs given, parse them
      \pgfkeysalso{#1/.cd, ##1}%
    \else
      % -- Only one value given, set it to "value" subkey
    %   \pgfkeyssetvalue{#1/value}{##1}%
      \pgfkeysalso{#1/value=##1}%
    \fi
  }}
}

